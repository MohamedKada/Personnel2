<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="350.0" styleClass="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.personnel.controllers.AjouterLigueController">
   <children>
      <VBox alignment="CENTER" layoutX="25.0" layoutY="25.0" prefHeight="300.0" prefWidth="300.0" styleClass="content-pane">
         <children>
            <Label styleClass="title-label" text="Ajouter une ligue">
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Label text="Nom de la ligue" />
            <TextField fx:id="txtLigue" maxWidth="250.0">
               <VBox.margin>
                  <Insets bottom="40.0" top="10.0" />
               </VBox.margin>
            </TextField>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#loadBack" styleClass="button-secondary" text="Quitter" />
                  <Button mnemonicParsing="false" onAction="#AjouterLigue" styleClass="button-success" text="Ajouter" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
